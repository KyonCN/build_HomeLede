
config global
	option enabled '0'
	option socks_enabled '0'
	option node 'myshunt'
	option dns_protocol 'tcp'
	option dns_forward '127.0.0.1:7053'
	option close_log '0'
	option loglevel 'error'

config global_delay
	option auto_on '0'
	option start_daemon '1'
	option start_delay '1'

config global_forwarding
	option process '0'
	option tcp_no_redir_ports 'disable'
	option udp_no_redir_ports '53'
	option accept_icmp '1'
	option tcp_proxy_way 'tproxy'
	option ipv6_tproxy '0'
	option sniffing '1'
	option route_only '0'

